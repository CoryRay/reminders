<main class="container">
  <h1>what de fack - reminders</h1>
  <hr>

  <p id="notice"><%= notice %></p>

  <table class="table u-full-width">
    <thead>
      <tr>
        <% Reminder.column_names.each do |column| %>
          <th><%= column %></th>
        <% end %>
        <th colspan="3">actions</th>
      </tr>
    </thead>

    <tbody>
      <% @reminders.each do |reminder| %>
        <tr>
          <td><%= reminder.id %></td>
          <td><%= reminder.name %></td>
          <td><%= reminder.frequency %></td>
          <td><%= reminder.at %></td>
          <td><%= reminder.body %></td>
          <td><%= link_to 'show', reminder %></td>
          <td><%= link_to 'edit', edit_reminder_path(reminder) %></td>
          <td><%= link_to 'destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Reminder', new_reminder_path, class: 'button' %>
</main>
